<div class="container">
  <div class="container">
    <h1>Edit Story</h1>
    <div class="row">
      <form class="col s12" action="/stories/{{story.id}}?_method=PUT" method="post">
        <input type="hidden" name="_method" value="PUT">
        <div class="row">
          <div class="input-field">
            <input type="text" name="title" value="{{story.title}}">
            <label for="title">Title</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field">
            <select name="status">
              {{#select story.status}}
              <option value="public" selected>Public</option>
              <option value="private">Private</option>
              <option value="unpublished">Unpublished</option>
              {{/select}}
            </select>
            <label for="status">Status</label>
          </div>
        </div>

        <div class="row">
          <p>
            <label>
              <input type="checkbox" name="allowComments" class="filled-in" {{#if story.allowComments}}checked="checked"{{/if}} id="filled-in-box" />
              <span>Allow Comments</span>
            </label>
          </p>
        </div>

        <div class="row">
          <div class="input-field">
            <h5>Create Your Story</h5>
            <textarea name="body" class="materialize-textarea">{{story.body}}</textarea>
          </div>
        </div>

        <div class="row">
          <input type="submit" name="Save" class="btn">
        </div>

      </form>
    </div>
  </div>
</div>
